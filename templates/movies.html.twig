{% extends "base.html.twig" %}

{% block title %}Movies{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-lg-6 static-control position-bottom-right">

            <div class="btn-group pull-right" role="group" aria-label="CRUD Actions">
                <a href="create_movie.php" class="btn btn-success" role="button">
                    <span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span>
                    Create New
                </a>
                <a href="create_movie.php" class="btn btn-success" role="button">
                    <span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span>
                    Create New
                </a>
                <button type="button" class="btn btn-default">Right</button>
            </div>

        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 well">
            <form class="form-inline" action="movies.php" method="POST">

                {% if genres is not empty %}
                <div class="form-group">
                    <label for="movieGenre">Genre</label>
                    <select class="form-control" id="movieGenre" name="genre">
                        {% for genre in genres %}
                            <option value="{{ genre.id }}">{{ genre.genre }}</option>
                        {% endfor %}
                    </select>
                </div>
                {% endif %}

                <div class="form-group">
                    <label for="movieTitle">Title</label>
                    <input type="text" class="form-control" id="movieTitle" name="movieTitle" placeholder="Citizen Kane">
                </div>
                <div class="form-group">
                    <label for="releasedFrom">Released Between</label>
                    <input type="date" class="form-control" id="releasedFrom" name="releasedFrom">
                </div>
                <div class="form-group">
                    <label for="releasedTo">And</label>
                    <input type="date" class="form-control" id="releasedTo" name="releasedTo">
                </div>
                <hr>
                <div class="form-group">
                    <label for="pageResults">Results per Page</label>
                    <input type="number" class="form-control" id="pageResults" placeholder="30" name="pageResults">
                </div>

                <button type="submit" name="submit" class="btn btn-info">Submit</button>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <table class="table">
                <caption>Movies</caption>
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Genre</th>
                    <th>Date</th>
                    <th class="text-center">Action</th>
                </tr>
                </thead>
                <tbody>

                {% if movies is not empty %}
                    {% for movie in movies.results %}
                        <tr>
                            <th scope="row">{{ movie.id }}</th>
                            <td>{{ movie.title }}</td>
                            <td>{{ movie.genre_id }}</td>
                            <td>{{ movie.date }}</td>
                            <td class="text-center"><a class='btn btn-info btn-xs' href="#"><span class="glyphicon glyphicon-edit"></span> Edit</a> <a href="#" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span> Del</a></td>
                        </tr>
                    {% endfor %}
                {% endif %}
                </tbody>
            </table>
        </div>
    </div>

    {% if movies is not empty %}
    <div class="row">
        <div class="col-md-12 text-center">
            <nav>
                <ul class="pagination">
                    {% if movies.current_page > movies.pages %}
                    <li>
                        <a href="movies.php?page={{ movies.current_page - 1 }}" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    {% endif %}

                    {% for row in movies.current_page..movies.current_page+5 %}
                        <li><a href="movies.php?page={{ row }}">{{ row }}</a></li>
                    {% endfor %}

                    {% if movies.current_page < movies.pages %}
                    <li>
                        <a href="movies.php?page={{ movies.current_page + 1 }}" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                    {% endif %}

                </ul>
            </nav>
        </div>
    </div>
    {% endif %}


{% endblock %}