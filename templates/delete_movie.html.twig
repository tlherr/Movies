{% extends "base.html.twig" %}

{% block title %}Delete Movie{% endblock %}

{% block content %}


    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">

            <div class="alert alert-warning" role="alert">Warning! This change cannot be undone, are you sure you want to delete this movie?</div>

            <form class="form-horizontal" action="delete_movie.php" method="POST">

                <div class="form-group">
                    <label for="title" class="col-sm-3">Title</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" id="movieTitle" name="title" value="{{ movie.title }}" disabled aria-disabled="true">
                    </div>
                </div>

                <div class="form-group">
                    <label for="score" class="col-sm-3">Score</label>
                    <div class="col-sm-9">
                        <input type="number" class="form-control" id="movieScore" name="score" value="{{ movie.score }}" disabled aria-disabled="true">
                    </div>
                </div>

                <div class="form-group">
                    <label for="score" class="col-sm-3">IMDB id</label>
                    <div class="col-sm-9">
                        <input type="number" class="form-control" id="movieIMDBid" name="imdb_id" value="{{ movie.imdb_id }}" disabled aria-disabled="true">
                    </div>
                </div>

                <div class="form-group">
                    <label for="date" class="col-sm-3">Release Date</label>
                    <div class="col-sm-9">
                        <input type="number" class="form-control" id="date" name="date" disabled aria-disabled="true" value="{{ movie.release_date }}" min="1980" max="2016">
                    </div>
                </div>

                <input class="hidden" name="movie_id" value="{{ movie.id }}" hidden="hidden">
                <button type="submit" name="submit" class="btn btn-danger pull-right">Delete Movie</button>
            </form>
        </div>
        <div class="col-lg-3"></div>
    </div>



{% endblock %}